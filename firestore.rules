rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isMLHAdmin() {
      return request.auth != null && request.auth.token.email.matches('.*@majorleaguehacking[.]com$');
    }

    function validRating() {
      return request.resource.data.contentRating >= 0 && request.resource.data.contentRating <= 5 &&
        request.resource.data.styleRating >= 0 && request.resource.data.styleRating <= 5
        && request.resource.data.comment.size() <= 256;
    }

    match /blog/{post} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /config/{config} {
      allow read: if false;
      allow write: if isMLHAdmin();
    }

    match /featuredSessions/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /gallery/{photo} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /notificationsSubscribers/{token} {
      allow list: if false;

      // Applies to document create requests
      allow create;
      allow update;
      allow delete;
      allow get;
    }

    match /notificationsUsers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /partners/{groupId} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();

      match /items/{itemId} {
        allow get;
        allow list;
        allow write: if isMLHAdmin();
      }
    }

    match /{path=**}/items/{itemId} {
      allow read;
      allow write: if isMLHAdmin();
    }

    match /potentialPartners/{partnerId} {
      allow delete: if false;

      allow get;
      allow list: if false;

      // Applies to document create requests
      //allow create;
      allow write;
    }

    match /previousSpeakers/{speaker} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /schedule/{day} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /generatedSchedule/{day} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /sessions/{session} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();

      match /feedback/{userId} {
        allow read, delete: if request.auth.uid == userId;
        allow write: if request.auth.uid == userId && validRating();
      }
    }

    match /{path=**}/feedback/{userId} {
      allow read, delete: if request.auth.uid == userId;
      allow list: if request.auth.uid == resource.data.userId;
      allow write: if request.auth.uid == userId && resource.data.userId == userId && validRating();
    }

    match /generatedSessions/{session} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /speakers/{speaker} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /generatedSpeakers/{speaker} {
      // Applies to single document read requests
      allow get;

      // Applies to queries and collection read requests
      allow list;

      // Disallow writes
      allow write: if false;
    }

    match /subscribers/{subscriberId} {
      allow delete: if false;

      allow get;
      allow list: if false;

      // Applies to document create requests
      //allow create;
      allow write;
    }

    match /team/{teamId} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();

      match /members/{memberId} {
        allow get;
        allow list;
        allow write: if isMLHAdmin();
      }
    }

    match /{path=**}/members/{memberId} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    match /tickets/{ticket} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }

    // TODO: Remove along with data
    match /users/{userId} {
      allow list: if false;

      allow get: if request.auth.uid == userId;

      allow create, delete: if false;
      allow update: if request.auth.uid == userId;
    }

    match /videos/{video} {
      allow get;
      allow list;
      allow write: if isMLHAdmin();
    }
  }
}
